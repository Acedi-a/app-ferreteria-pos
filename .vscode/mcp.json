{
    "inputs": [
    {
        "type": "promptString",
        "id": "db_path",
        "description": "SQLite Database Path",
        "default": "${workspaceFolder}/db.sqlite"
        }
    ],
    "servers": {
        "sqlite": {
        "command": "uvx",
        "args": [
            "mcp-server-sqlite",
            "--db-path",
            "${workspaceFolder}/db.sqlite"
            ]

        },
        "context7": {
            "type": "stdio",
            "command": "npx",
            "args": ["-y", "@upstash/context7-mcp"]
        }
    }
}
